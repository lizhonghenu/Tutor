<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--显示评论者图片-->
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/image_comment_user"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_comment_title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学科名称  年级"/>
        <TextView
            android:id="@+id/text_comment_content"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="评论内容"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/text_comment_issueDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-05-16 16：20"/>
            <TextView
                android:layout_gravity="center_horizontal"

                android:id="@+id/text_comment_issuer"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
